<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_topTen"
    android:background="@drawable/ic_backgroud"
    android:keepScreenOn="true">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_top_ten_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Records List"
            android:textColor="#F44336"
            android:background="@color/black"
            android:textSize="23sp" />


        <FrameLayout
            android:id="@+id/game_LAY_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#45454545" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_top_ten_LBL_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Google Map"
            android:textColor="#F44336"
            android:background="@color/black"
            android:textSize="23sp" />


        <FrameLayout
            android:id="@+id/game_LAY_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#45454545" />

    </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>